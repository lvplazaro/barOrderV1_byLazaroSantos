<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="barOrderV1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:barOrderV1.View"
    BackgroundColor="DarkBlue"
    Shell.FlyoutBehavior="Flyout"
    Title="barOrder">

    <Shell.FlyoutHeader>
        <VerticalStackLayout>
            <Image Source="dotnet_bot.png"/>
            <Label Text="barOrder" HorizontalTextAlignment="Center"/>
        </VerticalStackLayout>
    </Shell.FlyoutHeader>

    <ShellContent
        Title="Comandas Abertas"
        ContentTemplate="{DataTemplate local:PaginaInicialView}"
        Route="MainPage" />

    <ShellContent Title="Comandas Fechadas"
      ContentTemplate="{DataTemplate local:ComandasFechadasView}"
      Route="ComandasFechadasView"/>

    <ShellContent Title="Estoque"
              ContentTemplate="{DataTemplate local:EstoqueView}"
              Route="EstoqueView"/>


</Shell>
